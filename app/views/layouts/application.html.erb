<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <% if user_signed_in? %>
        <%= t 'views.authentication.logged_in_as_html', email: current_user.email %>
        <%= link_to t('views.authentication.account_update'), edit_user_registration_path %> |
        <%= link_to t('views.authentication.log_out'), destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to t('views.authentication.sign_up'), new_user_registration_path %> |
        <%= link_to t('views.authentication.log_in'), new_user_session_path %>
      <% end %>
    </nav>
    <%= yield %>
  </body>
</html>
